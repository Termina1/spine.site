@import 'mixins'

body, html
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  overflow: auto
  -webkit-user-select: none

html
  color: #52585D
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  font: 14px arial
  vbg-gradient(#DCDCDC, #CCCCCC)
  
p
  font-family: 'helvetica neue', helvetica, arial, sans-serif
  -webkit-user-select: text
  
a 
  color: #2D81C5
  text-shadow: 0 1px 0 #FFF
  text-decoration: none
  
::selection
  background: #E0EDF8
  text-shadow: none

@css {
  @font-face {
    font-family: "agb";
    src: url("/fonts/agb.ttf");
  }
}

button, a.cta
  line-height: 1em
  display: inline-block
  font-size: 13px
  padding: 4px 8px
  border: 1px solid rgba(0, 0, 0, 0.3)
  border-radius(5px)
  inset-line()
  text-shadow: 0 1px 0 #FFF
  color: darken(#52585D, 15%)
  vbg-gradient(#F2F2F2, #E7E7E7)
  font-family: 'Lucida Grande';

  background: -webkit-gradient(linear, left top, left bottom, from(#F2F2F2), color-stop(0.5, #F2F2F2), color-stop(0.5, #E7E7E7))
  -webkit-box-shadow: inset 0 1px 0 #FFF, 0 1px 1px rgba(0, 0, 0, 0.05)
  
  &.default
    border-color: rgba(104, 189, 244, 0.8)
    -webkit-box-shadow: inset 0 1px 0 #FFF, 0 1px 5px 0 rgba(104, 189, 244, 0.6)
    -moz-box-shadow: inset 0 1px 0 #FFF, 0 1px 5px 0 rgba(104, 189, 244, 0.6)
    box-shadow: inset 0 1px 0 #FFF, 0 1px 5px 0 rgba(104, 189, 244, 0.6)
  
  &:active
    border-color: rgba(0, 0, 0, 0.3)
    -webkit-box-shadow: inset 0 3px 15px rgba(0, 0, 0, 0.3), 0 1px 1px rgba(0, 0, 0, 0.1)
    -moz-box-shadow: inset 0 3px 15px rgba(0, 0, 0, 0.3), 0 1px 1px rgba(0, 0, 0, 0.1)
    box-shadow: inset 0 3px 15px rgba(0, 0, 0, 0.3), 0 1px 1px rgba(0, 0, 0, 0.1)
    
input[type=text], textarea
  padding: 3px
  margin: 0
  border: 1px solid rgba(0, 0, 0, 0.25)
  inset-box-shadow(0, 1px, 2px, rgba(0, 0, 0, 0.2))

input[type=text], textarea, select
  &:focus
    outline: none
    border-color: rgba(104, 189, 244, 0.8)
    
    -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2), 0 1px 5px 0 rgba(104, 189, 244, 0.6)
    -moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2), 0 1px 5px 0 rgba(104, 189, 244, 0.6)
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2), 0 1px 5px 0 rgba(104, 189, 244, 0.6)
  
textarea
  padding: 5px
  height: 80px
      
h1
  font: 20px arial,lucida,helvetica,arial,sans-serif
  font-weight: normal
  text-shadow: 0 1px 0 #FFF  
  
h2
  font: 60px "agb","helvetica neue",helvetica,arial,sans-serif
  line-height: 64px
  font-weight: normal
  text-shadow: 0 1px 0 #FFF
  margin: 5px 5px 0 10px
  
.right
  float: right

.left
  float: left
  
header.heading
  padding: 10px
  vbg-gradient(#F4F4F4, darken(#F4F4F4, 10%))
  border-bottom: 1px solid darken(#CCCCCC, 10%)
  text-align: center
  
  h2
    line-height: 35px
    font-size: 30px
    
.flash
  border-radius(3px)
  margin: 15px 0 10px 0
  padding: 5px 10px
  color: #151616
  font-size: 15px
  text-shadow:0 1px 0 rgba(255,255,255,0.5)
  box-shadow(0, 0, 2px, rgba(0, 0, 0, 0.3))
  -webkit-box-shadow: 0 0 2px rgba(0, 0, 0, 0.3), 0 1px 0px rgba(0, 0, 0, 0.2)
  background: #eef6fd

  &.error
    background: #ffc

.errors
  border-radius(3px)
  margin: 0px 0 15px 0
  padding: 10px 0px
  color: #151616
  font-size: 15px
  text-shadow:0 1px 0 rgba(255,255,255,0.5)
  box-shadow(0, 0, 2px, rgba(0, 0, 0, 0.3))
  -webkit-box-shadow: 0 0 2px rgba(0, 0, 0, 0.3), 0 1px 1px rgba(0, 0, 0, 0.2)
  background: #ffc
  
  ul
    margin: 0

#section  
  width: 700px
  margin: 30px auto 0
  box-shadow(0, 1px, 4px, rgba(0, 0, 0, 0.4))
  background: #FFF
  
  min-height: 200px  
  
  position: relative
  
  &:after, &:before
    content: ""
    z-index: -1;
    position: absolute;
    bottom: 25px;
    width: 70%;
    height: 200px
    box-shadow(0, 4px, 8px, rgba(0, 0, 0, 0.3))

  &:before
    left: 25px
    transform(skew(-15deg) rotate(-6deg))
  
  &:after
    right: 25px
    transform(skew(15deg) rotate(6deg))
    
#header
  padding: 5px
  overflow: hidden
  height: 30px
  line-height: 30px
  background: #FFF
  border-bottom: 1px solid lighten(#CCCCCC, 30%)

  h1
    line-height: 35px
    font-size: 20px
    margin: 0 5px
    text-shadow: 0 1px 1px #FFF    
    color: lighten(#52585D, 20%)
    
    a
      color: lighten(#52585D, 20%)    
    
  ul
    list-style:none
    margin: 0
    padding: 0
    

  li
    margin: 0 10px
    float: left

#footer
  width: 220px
  margin: 0 auto
  font-size: 13px
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.4)
  color: lighten(#52585D, 30%)
  
  a
    color: lighten(#52585D, 30%)

  ul
    list-style: none
    margin: 0
    padding: 0
    overflow: hidden
    
  li
    padding: 10px
    float: left