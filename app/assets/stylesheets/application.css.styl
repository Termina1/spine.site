@import 'mixins'

#section  
  width: 700px
  margin: 30px auto 0
  box-shadow(0, 1px, 4px, rgba(0, 0, 0, 0.4))
  background: #FFF
  
  min-height: 200px  
  
  position: relative
  
  &:after, &:before
    content: ""
    z-index: -1;
    position: absolute;
    bottom: 25px;
    width: 70%;
    height: 200px
    box-shadow(0, 4px, 8px, rgba(0, 0, 0, 0.2))

  &:before
    left: 25px
    transform(skew(-15deg) rotate(-6deg))
  
  &:after
    right: 25px
    transform(skew(15deg) rotate(6deg))
    
#header
  padding: 5px
  overflow: hidden
  height: 30px
  line-height: 30px
  background: #FFF
  border-bottom: 1px solid lighten(#CCCCCC, 30%)

  h1
    line-height: 30px
    font-size: 20px
    margin: 0 5px
    text-shadow: 0 1px 1px #FFF    
    color: lighten(#52585D, 20%)
    
    a
      color: lighten(#52585D, 20%)    
    
  ul
    list-style:none
    margin: 0
    padding: 0

  li
    margin: 0 10px
    float: left

#footer
  width: 220px
  margin: 0 auto
  font-size: 13px
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.4)
  color: lighten(#52585D, 30%)
  
  a
    color: lighten(#52585D, 30%)

  ul
    list-style: none
    margin: 0
    padding: 0
    overflow: hidden
    
  li
    padding: 10px
    float: left